<div id="contact-us" class="my-5">
    <div class="container theme-color">
        <h1 class="text-center py-5 font-weight-bold">{{contact.title}}</h1>
        <div class="row px-md-5 my-3">
            <div class="col-md-6 text-center order-md-2 my-3 will-show">
                <p class="my-2 h5 font-weight-bold">{{contact.office}}</p>
                <p class="my-1">250 Consumers Rd, Suite 909</p>
                <p class="my-1">North York, ON, M2J 4V6</p>
                <p class="my-1">Mon-Fri 9:30am-5:30pm</p>
                <p class="my-1"><a href="mailto:xunmei@lklawfirm.ca" class="theme-color">xunmei@lklawfirm.ca</a></p>
                <p class="my-1">Tel: 4164908555</p>
                <p class="my-1">Fax: 4164909555</p>
            </div>
            <div class="col-md-6 order-md-1 my-3 map px-5 px-md-3">
                <iframe class="w-100 h-100" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2881.0502378472916!2d-79.33300958462942!3d43.77181597911749!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d4d25eb7746175%3A0xe99a2494eda87a09!2s250%20Consumers%20Rd%2C%20North%20York%2C%20ON%20M2J%204V6!5e0!3m2!1sen!2sca!4v1581041025929!5m2!1sen!2sca" frameborder="0" allowfullscreen=""></iframe>
            </div>
        </div>
        <hr>
        <div class="row px-md-5 my-3">
            <div class="col-md-6 text-center my-3 will-show">
                <p class="my-2 h5 font-weight-bold">{{contact.message}}</p>
                <p class="my-1">{{contact.message-1}}</p>
                <p class="my-1">{{contact.message-2}}</p>
            </div>
            <div class="col-md-6 my-3 px-5 px-md-3">
                <form>
                    <div class="form-group my-1">
                        <label for="message-name" hidden>Your Name</label>
                        <input type="text" class="form-control border-theme-color" name="name" id="message-name" placeholder="*{{contact.message-box.sender-name}}" required>
                    </div>
                    <div class="form-group my-1">
                        <label for="message-email" hidden>Your Email</label>
                        <input type="email" class="form-control border-theme-color" name="email" id="message-email" placeholder="*{{contact.message-box.sender-email}}: name@example.com" required>
                    </div>
                    <div class="form-group my-1">
                        <label for="message-subject" hidden>Subject</label>
                        <input type="text" class="form-control border-theme-color" name="subject" id="message-subject" placeholder="{{contact.message-box.email-subject}}" autocomplete="off">
                    </div>
                    <div class="form-group my-1">
                        <label for="message-text" hidden>Message</label>
                        <textarea class="form-control border-theme-color" name="message" id="message-text" rows="4" placeholder="*{{contact.message-box.email-content}}" required></textarea>
                    </div>
                    <div class="form-row justify-content-center justify-content-md-end my-2">
                        <div class="col-4">
                            <button type="submit" class="form-control btn btn-outline-theme-color btn-sm">{{contact.message-box.send}}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>