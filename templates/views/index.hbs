{{>header}}


<div id="headLine">
    <div id="carouselHeadline" class="carousel slide trans" data-ride="carousel">
        {{!-- <ol class="carousel-indicators">
            <li data-target="#carouselHeadline" data-slide-to="0" class="active"></li>
            <li data-target="#carouselHeadline" data-slide-to="1"></li>
            <li data-target="#carouselHeadline" data-slide-to="2"></li>
        </ol> --}}
        <div class="carousel-inner">
            {{# headline_news}}
            <div class="carousel-item">
                <img src="{{img_url}}" class="d-block w-100" alt="">
                <div class="carousel-caption d-none d-md-block trans theme-color px-5">
                    <h2>{{title}}</h2>
                    <p>{{content}}</p>
                    <a class="btn btn-outline-theme-color" href="#" role="button">Learn More >></a>
                </div>
                <div class="d-block d-md-none theme-color text-center py-3 px-5" style="height: 60vw">
                    <div class="d-flex flex-column h-100 justify-content-center align-items-center">
                        <h3>{{title}}</h3>
                        <p>{{content}}</p>
                        <a class="btn btn-outline-theme-color" href="#" role="button">Learn More >></a>
                    </div>
                </div>
            </div>
            {{/ headline_news}}
        </div>
        <a class="carousel-control-prev" href="#carouselHeadline" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselHeadline" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

{{>about}}

<hr class="dotted">

{{>contact}}

{{>footer}}

